<p style="color: green"><%= notice %></p>


<div class="d-flex justify-content-between mb-3">
  <h1>Product List</h1>
  <%= link_to "New item", new_item_path, class:"btn btn-success my-auto"%>
</div>

<div id="items">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Product Link</th>
        <th>Purchased Price</th>
        <th>Current Value</th>
        <th>Profit</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.product %></td>
          <td><%= item.product_link %></td>
          <td><%= item.bought_price %></td>
          <td><%= item.current_value %></td>
          <td><%= (item.current_value - item.bought_price) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

